---
import { Icon, IconNames } from "./Icon";
import phoneText from "../assets/phone-text.jpg";

interface Feature {
  icon: IconNames;
  title: string;
  description: string;
}

interface Props {
  heading?: {
    eyebrow?: string;
    title: string;
    description: string;
  };
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {
    icon: IconNames.heart,
    title: "Personalized AI-Driven Therapy",
    description:
      "Advises core offering is an empathetic AI-driven chat service that engages college students in real-time, confidential conversations. This personalized virtual companion is trained to understand and respond to a variety of emotional concerns, providing immediate support tailored to the unique experiences of college life and answers driven by the organization's specific policies and procedures. From stress management to coping with academic pressures, advise offers a confidential space for members to get help whenever it is needed.",
  },
  {
    icon: IconNames.LockClosedIcon,
    title: "Beyond an expert",
    description:
      "Advise's AI has extensive training in our proprietary blend of expert psychology content, ensuring it possesses a deep understanding of all therapeutic approaches for effectively assisting college students dealing with mental health issues.",
  },
  {
    icon: IconNames.server,
    title: "Customizable fraternal Hub",
    description:
      "Your members will receive customized content that answers their questions about your college, fraternity, or sorority policies and procedures, ensuring they have the knowledge needed to be responsible and safe.",
  },
  {
    icon: IconNames.sparkles,
    title: "reporting and valuable insights",
    description:
      "Advise offers organizations the ability to gain valuable insights into their members through autonomous reports, all while maintaining strict privacy standards and ensuring user data remains confidential and secure.",
  },
];

const defaultHeading = {
  eyebrow: "",
  title: "Top Features",
  description: "",
};

const { heading = defaultHeading, features = defaultFeatures } = Astro.props;
---

<div class="overflow-hidden py-24 sm:py-32 text-base-content">
  <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start"
    >
      <div class="px-6 md:px-0 lg:pt-4 lg:pr-4">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
          {
            heading.eyebrow && (
              <h2 class="text-base/7 font-semibold text-primary">
                {heading.eyebrow}
              </h2>
            )
          }
          <p
            class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-base-900 sm:text-5xl"
          >
            {heading.title}
          </p>
          <p class="mt-6 text-lg/8 text-base-700">
            {heading.description}
          </p>
          <dl
            class="mt-10 max-w-xl space-y-8 text-base/7 text-gray-600 lg:max-w-none"
          >
            {
              features.map(({ icon, title, description }) => (
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-base-900">
                    <svg
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      data-slot="icon"
                      aria-hidden="true"
                      class="absolute top-1 left-1 size-5 text-primary"
                    >
                      <Icon name={icon} />
                    </svg>
                    {title}
                  </dt>
                  <dd class="inline"> {description}</dd>
                </div>
              ))
            }
          </dl>
        </div>
      </div>
      <div class="sm:px-6 lg:px-0">
        <div
          class="relative isolate overflow-hidden bg-primary sm:mx-auto sm:max-w-2xl sm:rounded-3xl lg:mx-0 lg:max-w-none"
        >
          <img
            src={phoneText.src}
            alt="Feature preview"
            class="w-full h-auto rounded-md shadow-2xl ring-1 ring-white/10"
            loading="lazy"
          />

          <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-0 ring-1 ring-black/10 ring-inset sm:rounded-3xl"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
