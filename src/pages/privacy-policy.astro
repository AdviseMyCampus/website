---
import { getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { render } from "astro:content";

const privacyPolicy = await getEntry("general", "privacy-policy");
if (!privacyPolicy) throw new Error("Privacy policy content not found");
const { Content } = await render(privacyPolicy);
---

<Layout title="Privacy Policy" description="Get a description from Ryan">
  <article class="prose lg:prose-xl mx-auto my-8 text-base-content">
    <Content />
  </article>
</Layout>

